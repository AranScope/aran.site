aran.site {
	ext .html .md
	gzip
	log access.log
	errors error.log
	root public
	startup gulp
	startup gulp watch &

	redir 302 {
		if {path} is /
		/ /resume
	}
}

blog.aran.site {
	ext .md	

	markdown /posts {
		css https://aran.site/css/post.css
	}
	
	rewrite {
		to {path} {path}/ /posts{uri}
	}	
}
